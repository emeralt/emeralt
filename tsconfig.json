{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "types": ["node"],
    "lib": ["esnext"],

    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "outDir": "build",
    "declaration": true,
    "declarationMap": true,
    
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@test/*": ["./test/*"]
    }
  },
  "exclude": [
    "./*/*/build/**/*",
    "./*/*/test/**/*"
  ]
}
