{
  "compilerOptions": {
    "target": "es2015",
    "types": ["node"],
    "lib": ["esnext"],

    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "declaration": true,
    "declarationMap": true,

    // "baseUrl": "",
    "paths": {
      "@/*": ["./src/*"],
      "@test/*": ["./test/*"]
    }
  },
  "exclude": [
    // "./*/*/build/**/*",
    "./*/*/test/**/*"
  ]
}
