{
  "name": "@emeralt/cli",
  "version": "0.0.10",
  "author": "stackdumper <stackdumper@gmail.com>",
  "license": "MIT",
  "main": "./build/index.js",
  "bin": {
    "emeralt": "./build/index.js"
  },
  "scripts": {
    "test": "ava test/**/*.test.ts",
    "test:ci": "nyc -s yarn test &&  nyc report --reporter=text-lcov | coveralls",
    "build": "node ../../cli/index build ."
  },
  "dependencies": {
    "@emeralt/server": "^0.0.10"
  },
  "nyc": {
