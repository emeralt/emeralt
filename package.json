{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "bin": {
    "emeralt": "./build/index.js"
  },
  "scripts": {
    "build": "lerna run build",
    "watch": "exit 0",
    "start": "lerna run start --stream --parallel",
    "test": "cross-env LERNA_TEST_RUN=1 NODE_ENV=test lerna exec yarn test",
    "test:coverage": "cross-env LERNA_TEST_RUN=1 NODE_ENV=test nyc lerna exec yarn test",
    "clean": "git clean -dfX",
    "format": "npx prettier --ignore-path .gitignore --write './!(node_modules|build)/**/*.{ts,tsx,js,jsx}'"
  },
  "dependencies": {
    "prettier": "^1.15.3",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@commitlint/config-lerna-scopes": "^7.2.1",
    "@types/chokidar": "^1.7.5",
    "@types/fs-extra": "^5.0.4",
    "@types/node": "^10.12.18",
    "@types/sinon": "^7.0.2",
    "@types/supertest": "^2.0.7",
    "ava": "^1.0.1",
    "chokidar": "^2.0.4",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "deepmerge": "^3.0.0",
    "dts-generator": "^2.1.0",
    "fast-glob": "^2.2.4",
    "husky": "^1.2.1",
    "lerna": "^3.8.5",
    "nodemon": "^1.18.9",
    "nyc": "^13.1.0",
    "sinon": "^7.2.2",
    "supertest": "^3.3.0",
    "tsconfig-paths": "^3.7.0"
  },
  "name": "emeralt",
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "packages/*/src"
    ],
    "exclude": [
      "packages/emeralt-types"
    ],
    "reporters": [
      "text-lcov"
    ],
    "all": true
  }
}
