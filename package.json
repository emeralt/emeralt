{
  "private": true,
  "name": "emeralt",
  "workspaces": [
    "packages/*/*",
    "scripts"
  ],
  "scripts": {
    "build": "lerna exec yarn build --sort",
    "watch": "lerna exec yarn watch --parallel --stream",
    "test": "cross-env LERNA_TEST_RUN=1 NODE_ENV=test lerna exec yarn test --sort",
    "test:coverage": "cross-env LERNA_TEST_RUN=1 NODE_ENV=test nyc lerna exec yarn test --sort",
    "clean": "git clean -dfX",
    "format": "npx prettier --ignore-path .gitignore --write './!(node_modules|build)/**/*.{ts,tsx,js,jsx}'",
    "init-package": "ts-node -P ./scripts/tsconfig.json scripts/init.ts"
  },
  "dependencies": {
    "cross-env": "5.2.0",
    "prettier": "1.15.3",
    "ts-node": "7.0.1",
    "typescript": "3.2.2"
  },
  "devDependencies": {
    "@commitlint/cli": "7.2.1",
    "@commitlint/config-conventional": "7.1.2",
    "@commitlint/config-lerna-scopes": "7.2.1",
    "@types/node": "10.12.18",
    "ava": "1.0.1",
    "coveralls": "3.0.2",
    "husky": "1.3.1",
    "lerna": "3.9.0",
    "nyc": "13.1.0",
    "tsconfig-paths": "3.7.0"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "packages/*/*/src"
    ],
    "exclude": [
      "packages/core/emeralt-types",
      "packages/misc/emeralt-bundler"
    ],
    "reporters": [
      "text-lcov"
    ],
    "all": true
  }
}
